<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">
			<!-- <success>Always</success> -->
			<operations>
<!-- :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::: -->
<!-- ::::::::::::::::::::::::::: PROSTHETICS AND IMPLANTS ::::::::::::::::::::::::::::::: -->
<!-- :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::: -->	
				<!-- Prosthetics and Implants -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "BodyPartProstheticBase" or @Name = "BodyPartArchotechBase"]</xpath>
					<value>
						<techHediffsTags>
							<li>Stuffable</li>
							<li>StuffableBodyPart</li>
						</techHediffsTags>
					</value>
				</li>
				<!-- Prosthetics and Implants -->
				<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[@Name = "BodyPartBionicBase"]/techHediffsTags</xpath>
					<value>
						<li>Stuffable</li>
						<li>StuffableBodyPart</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
				<xpath>/Defs/HediffDef[@Name = "ImplantHediffBase"]</xpath>
					<value>
						<tags>
							<li>Stuffable</li>
							<li>StuffableHediff</li>
						</tags>
					</value>
				</li>
<!-- :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::: -->
<!-- ::::::::::::::::::::::::::: WEAPONS :::::::::::::::::::::::::::::::::::::::::::::::: -->
<!-- :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::: -->					
				<!-- Weapons -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "BaseWeapon"]</xpath>
					<value>
						<weaponTags>
							<li>Stuffable</li>
							<li>StuffableWeapon</li>
						</weaponTags>
					</value>
				</li>
				
				<!-- Melee -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "BaseMeleeWeapon"]</xpath>
					<value>
						<weaponTags>
							<li>Stuffable</li>
							<li>StuffableWeaponMelee</li>
						</weaponTags>
					</value>
				</li>
				<!-- Ranged -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "BaseGun"]</xpath>
					<value>
						<weaponTags>
							<li>Stuffable</li>
							<li>StuffableWeaponRanged</li>
						</weaponTags>
					</value>
				</li>
<!-- :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::: -->
<!-- ::::::::::::::::::::::::::: CLOTHING AND ARMOR ::::::::::::::::::::::::::::::::::::: -->
<!-- :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::: -->				
				<!-- Clothing -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "ApparelNoQualityBase"]</xpath>
					<value>
						<apparel>
							<tags>
								<li>Stuffable</li>
								<li>StuffableClothing</li>
							</tags>
						</apparel>
					</value>
				</li>
				<!-- Armor -->
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name = "ArmorMachineableBase"]</xpath>
					<value>
						<apparel>
							<tags>
								<li>Stuffable</li>
								<li>StuffableArmor</li>
							</tags>
						</apparel>
					</value>
				</li>
			</operations>
	</Operation>
</Patch>